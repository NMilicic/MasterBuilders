@model Data.Domain.LSet

@{
    ViewBag.Title = "Set Details";
}


<div class="details">
    <dl class="dl-horizontal">
        <dt>
            Name:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ime)
        </dd>
        <dt>
            Year:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GodinaProizvodnje)
        </dd>
        <dt>
            Number of parts:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DijeloviBroj)
        </dd>
        <dt>
            Description:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt>
            Theme:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tema.ImeTema)
        </dd>
        @if (Model.Tema.NadTema != null)
        {

            <dt>
                Base theme:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Tema.NadTema.ImeTema)
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Sets", "Search")
</p>
