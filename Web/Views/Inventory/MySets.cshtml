
@{
    ViewBag.Title = "My Sets";
}

<head runat="server">
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $(".inventory-add").click(function (e) {
                e.preventDefault();
                $.get("/Inventory/AddAjax", { setId: $(this).attr("value") }, function (response) {
                });
                alert("Set added to your inventory");
            });
            $(".inventory-remove").click(function (e) {
                e.preventDefault();
                $.get("/Inventory/RemoveAjax", { setId: $(this).attr("value") }, function (response) {
                });
                alert("Set removed from your inventory");
            });
            $(".built-add").click(function (e) {
                e.preventDefault();
                $.get("/Inventory/BuiltAddAjax", { setId: $(this).attr("value") }, function (response) {
                });
                alert("Built count incresed");
            });
            $(".built-remove").click(function (e) {
                e.preventDefault();
                $.get("/Inventory/BuiltRemoveAjax", { setId: $(this).attr("value") }, function (response) {
                });
                alert("Built count decresed");
            });
        });
    </script>
</head>

<h2>@ViewBag.Title</h2>

<table class="table" id="setsTable">
    <tr>
        <th>
            Name
        </th>
        <th>
            Theme
        </th>
        <th>
            Owned
        </th>
        <th>
            Built
        </th>
    </tr>

    @foreach (var item in ViewBag.sets)
    {
        <tr>
            <td>
                @item.Set.Ime
            </td>
            <td>
                @item.Tema.ImeTema
            </td>
            <td>
                @item.Komada
                <i class="fa fa-plus-circle fa-lg active inventory-add" value="@item.Id" title="Add one"></i>
                <i class="fa fa-minus-circle fa-lg active inventory-remove"  value="@item.Id" title="Remove one"></i>
            </td>
            <td>
                @item.Slozeno
                <i class="fa fa-plus-circle fa-lg active built-add" value="@item.Id" title="Add one"></i>
                <i class="fa fa-minus-circle fa-lg active built-remove" value="@item.Id" title="Remove one"></i>
            </td>
        </tr>
    }

</table>

